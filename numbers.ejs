<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<body class="index_html">

  <div class="nav_bar">
    <a href="/menu">
      <li class="bar_content">메뉴</li>
    </a>
    <a href="/write">
      <li class="bar_content">작성하기</li>
    </a>
    <a href="/check">
      <li class="bar_content">검사하기</li>
    </a>
  </div>

  <li class="tops__">
    <span class="gray">[ <%= post_types %> ],</span>
    <span class="orange"> <%= post_mbti %>,</span>
    <span class="black"> <%= user_name %> </span>
  </li>
  
  <li class="bordersf">
    <span class="grayi">
      <%= showing_date %>에 등록
    </span>
  </li>

    <h1 class="top_list"><%= post_title %></h1>

    <textarea class="addr" readonly><%= post_description %></textarea>

    <br><br><br>
    <button class="od" onclick="javascript:history.back();"> ⇦ </button>

    <button class=" ud" data-id="<%= _id %>">✕</button>

      <script>
        var txtArea = $(".addr");
        var a = 150;
        if (txtArea) {
          txtArea.each(function () {
            a += 10;
            $(this).height(this.scrollHeight + a);
          });
        }

        a = 0;
      </script>

    </div>

      <br>

      <script>

        $('.ud').click(function(event_) {
          var pwisit = prompt('글 작성시 이용한 비밀번호를 입력해주세요.')
          var 글번호 = event_.target.dataset.id; 
          var 지금누른거 = $(this);

          $.ajax({
            method: 'DELETE',
            url: '/editordelete',
            data: {
              _id: 글번호,
              pwisit: pwisit
            },
          })
          .done((result) => {
            alert('삭제되었습니다.');
            location.href = '/'
          })
          .fail(function(xhr, textStatus, errorThrown) {
            alert('비밀번호를 잘못 입력하셨습니다.')
            console.log(xhr, textStatus, errorThrown)
          })
        });

      </script>

  </div>

  <div id="footer">
    Developer: LEE HARAM / Contant: slyram06@icloud.com
  </div>
  
  <style>
    #footer {
